<h1>Categories</h1>
<% @categories.each do |category| %>
<div>
  <% if category.cover.attached? %>
    <div>
      <%= image_tag category.cover,  alt: "Category image" %>
    </div>
  <% end %>
  <span>
    <%= category.name %>
  </span>
  <span>
    <%= category.photos_count %>
  </span>
  <div>
    <%= link_to "edit", edit_category_path(category) %>
    <%= link_to "destroy", category_path(category), data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %>
  </div>

</div>
<% end %>
