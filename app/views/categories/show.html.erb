<h1>The category number <%= params[:id]%></h1>
<h1>
  <%= @category.name %>
</h1>
<p>
  <%= @category.description %>
</p>

<h2>Photos</h2>
<%= link_to "New photo", new_photo_path(category_id: @category.id) %>
<br />
<br />

<% @photos.each do |photo| %>
  <div>
    <% if photo.image.attached? %>
      <div>
        <%= image_tag photo.image %>
      </div>
    <% end %>
  </div>
  <p>
    <%= photo.title %>
  </p> 
  <div>
    <%= link_to "edit", edit_photo_path(photo) %>
    <%= link_to "destroy", photo_path(photo), data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %>
  </div>
<% end %>

<%= form_with(model: [@category, @newcomment], url: category_comments_path(@category)) do |form| %>
  <div>
    <%= form.text_field :body %>
  </div>

  <%= form.submit 'Agregar Comentario' %>
<% end %>

<% @comments.each do |comment| %>
  <div>
    <% unless comment.blank?%>
      <div>
        <br />
        <br />
        <%= comment.body %>
        <br />
        <br />
      </div>
    <% end %>
  </div>

<% end %>
